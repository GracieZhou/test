<?xml version="1.0" encoding="UTF-8"?>
<layer-list
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background" >
		<shape>
			<corners android:radius="5dip" />
			<gradient android:startColor="#4ff11111"
				android:centerColor="#4ff11111"
				android:endColor="#4ff11111" android:centerY="0.45"
				android:angle="270" />
		</shape>
		
	</item>
	
	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="5dip" />
				<gradient android:startColor="#00a6ac"
					android:centerColor="#00a6ac"
					android:endColor="#00a6ac" 
					android:centerY="0.45"
					android:angle="90" />
			</shape>
		</clip>
	</item>
	
	
	      
</layer-list>    
